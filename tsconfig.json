{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "stripInternal": true,

    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": false
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
