{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "stripInternal": true,
    "strictNullChecks": true,

    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": false,

    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
